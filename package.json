{
  "name": "blockovy-system",
  "productName": "Bločkovy System",
  "version": "0.0.1",
  "description": "System for accountants that captures frames from camera and fetches text from receipts. From These receipts are than taken numbers and are placed to newly created excel file.",
  "main": "main.js",
  "scripts": {
    "compile": "tsc && copyfiles -u 1 src/*.html build",
    "start": "npm run compile && electron .",
    "development": "nodemon --exec electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "distwin": "electron-builder -- --win -x64"
  },
  "author": "Richard Nemeth",
  "keywords": [
    "Bločkový",
    "blockovy",
    "receipt",
    "Bločkový system",
    "blockovy system",
    "receipt system"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "electron-log": "^5.1.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "toastify-js": "^1.12.0"
  },
  "build": {
    "appId": "com.receipt-system",
    "productName": "Receipt OCR",
    "directories": {
      "output": "dist"
    },
    "files": [
      "model/*.py",
      "view/",
      "main.js",
      "package.json",
      "icon.ico",
      "./preload.js"
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
